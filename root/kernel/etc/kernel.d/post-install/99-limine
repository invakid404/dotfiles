VERSION="$2"

cat >/boot/limine/limine.conf <<EOF
timeout: 5

/Bedrock Linux
    protocol: linux
    kernel_path: boot():/vmlinuz-${VERSION}
    kernel_cmdline: initramfs-${VERSION}.img root=UUID=$(blkid | grep LABEL=\"VROOT\" | awk -F'"' '{print $4}') rw
    module_path: boot():/initramfs-${VERSION}.img
EOF
